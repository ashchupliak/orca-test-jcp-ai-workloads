{
  "name": "Python Tests - Health Check, System Resources, Secrets, Networking",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "remoteEnv": {
    "PYTHONPATH": "/workspaces/orca-test-jcp-ai-workloads",
    "TEST_MODE": "devcontainer",
    "CONTAINER_NAME": "python"
  },

  "postCreateCommand": "pip install --no-cache-dir requests flask pytest flask-cors && curl -fsSL https://code-server.dev/install.sh | sh",
  "postStartCommand": "bash /workspaces/orca-test-jcp-ai-workloads/.devcontainer-python/start-all.sh &",
  "forwardPorts": [8000, 8001, 8080]
}
