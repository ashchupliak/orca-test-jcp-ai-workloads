{
  "name": "Python Tests - Health Check, System Resources, Secrets, Networking",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "/workspaces/orca-test-jcp-ai-workloads",
    "TEST_MODE": "devcontainer",
    "CONTAINER_NAME": "python"
  },

  "postCreateCommand": "pip install --no-cache-dir requests flask pytest",
  "postStartCommand": "/workspaces/orca-test-jcp-ai-workloads/common/start-services.sh sleep infinity &",
  "forwardPorts": [8000]
}
