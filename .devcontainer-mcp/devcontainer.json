{
  "name": "MCP (Model Context Protocol) Tests",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "runArgs": [
    "-p",
    "8000:8000",
    "-p",
    "8001:8001",
    "-p",
    "8080:8080"
  ],
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "TEST_MODE": "devcontainer",
    "CONTAINER_NAME": "mcp"
  },
  "postCreateCommand": "pip install --no-cache-dir requests flask pytest flask-cors || pip3 install --no-cache-dir requests flask pytest flask-cors && npm install -g @modelcontextprotocol/sdk && curl -fsSL https://code-server.dev/install.sh | sh",
  "postStartCommand": "bash /workspaces/orca-test-jcp-ai-workloads/common/start-all.sh",
  "forwardPorts": [
    8000,
    8001
  ]
}