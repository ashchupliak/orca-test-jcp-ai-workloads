{
  "name": "MCP (Model Context Protocol) Tests",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "TEST_MODE": "devcontainer",
    "CONTAINER_NAME": "mcp"
  },
  "postCreateCommand": "npm install -g @modelcontextprotocol/sdk",
  "postStartCommand": "bash /workspaces/orca-test-jcp-ai-workloads/common/start-all.sh",
  "forwardPorts": [
    8000,
    8001
  ]
}
