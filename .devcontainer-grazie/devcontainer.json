{
  "name": "Grazie AI Service - Flask Web App",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "WORKSPACE_ROOT": "/workspace",
    "GRAZIE_ENVIRONMENT": "${localEnv:GRAZIE_ENVIRONMENT:PREPROD}",
    "GRAZIE_API_TOKEN": "${localEnv:GRAZIE_API_TOKEN:}"
  },

  "forwardPorts": [8000, 8001],

  "postStartCommand": "bash /workspace/common/unified-service/start.sh"
}
