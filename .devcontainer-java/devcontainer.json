{
  "name": "Java Development Tests",
  "image": "mcr.microsoft.com/devcontainers/base:debian",
  "runArgs": ["-p", "8000:8000", "-p", "8001:8001", "-p", "8080:8080"],
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "21",
      "installMaven": "true",
      "installGradle": "true"
    }
  },
  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "TEST_MODE": "devcontainer",
    "JAVA_HOME": "/usr/local/sdkman/candidates/java/current",
    "CONTAINER_NAME": "java"
  },
  "postStartCommand": "bash /workspaces/orca-test-jcp-ai-workloads/common/start-all.sh",
  "forwardPorts": [
    8000,
    8001,
    8080
  ],
  "postCreateCommand": "curl -fsSL https://code-server.dev/install.sh | sh"
}