{
  "name": "AI Tools - Claude Code & Codex CLI with JetBrains AI Platform",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "WORKSPACE_ROOT": "/workspace",
    "GRAZIE_ENVIRONMENT": "${localEnv:GRAZIE_ENVIRONMENT:PREPROD}",
    "GRAZIE_API_TOKEN": "${localEnv:GRAZIE_API_TOKEN:}"
  },

  "forwardPorts": [8000],

  "postCreateCommand": "setup-ai-tools.sh",

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "version": "latest",
      "moby": true
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  }
}
