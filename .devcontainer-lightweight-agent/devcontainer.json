{
  "name": "Lightweight Agent Testing - Python + Claude",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "remoteEnv": {
    "PYTHONPATH": "/workspace",
    "WORKSPACE_ROOT": "/workspace/orca-test-jcp-ai-workloads"
  },

  "postCreateCommand": "pip install --no-cache-dir anthropic fastapi 'uvicorn[standard]' websockets",

  "postStartCommand": "nohup python /workspace/orca-test-jcp-ai-workloads/lightweight_agent_server.py --port 35697 --workspace /workspace/orca-test-jcp-ai-workloads > /tmp/agent-server.log 2>&1 &"
}
